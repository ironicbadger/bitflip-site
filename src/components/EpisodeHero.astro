---
const { episode, Content } = Astro.props;
const { title, episodeNumber, date, summary, tags, coverImage } = episode.data;
---

<section class="hero card">
  <div class="hero-media">
    <div class="hero-cover">
      <img src={coverImage} alt={`${title} cover art`} loading="lazy" />
    </div>
    <div class="hero-meta">
      <div class="section-title">Latest Episode</div>
      <div class="hero-title">#{episodeNumber} â€” {title}</div>
      <div class="hero-date">{date}</div>
      <p class="hero-summary">{summary}</p>
      {tags && (
        <div class="hero-tags">
          {tags.map((tag) => (
            <span class="tag" key={tag}>{tag}</span>
          ))}
        </div>
      )}
      <div class="hero-actions">
        <button class="button" type="button">Play Episode</button>
        <a class="button secondary" href={`/${episodeNumber}`}>Full Notes</a>
      </div>
    </div>
  </div>
  <div class="hero-notes">
    <Content />
  </div>
</section>

<style>
  .hero {
    padding: 32px;
    display: grid;
    gap: 24px;
  }
  .hero-media {
    display: grid;
    gap: 24px;
    grid-template-columns: minmax(0, 280px) minmax(0, 1fr);
    align-items: center;
  }
  .hero-cover {
    background: linear-gradient(160deg, var(--ink-800), var(--ink-700));
    border-radius: var(--radius-md);
    padding: 16px;
    border: 1px solid rgba(243, 139, 18, 0.2);
  }
  .hero-cover img {
    width: 100%;
    border-radius: 10px;
  }
  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    margin: 0 0 8px;
  }
  .hero-date {
    color: var(--steel-500);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: 0.8rem;
  }
  .hero-summary {
    color: var(--steel-300);
    max-width: 580px;
  }
  .hero-tags {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    margin: 12px 0 0;
  }
  .tag {
    border: 1px solid rgba(243, 139, 18, 0.4);
    color: var(--safety-500);
    padding: 4px 10px;
    border-radius: 999px;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }
  .hero-actions {
    display: flex;
    gap: 12px;
    margin-top: 16px;
    flex-wrap: wrap;
  }
  .hero-notes {
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    padding-top: 20px;
    color: var(--steel-300);
    line-height: 1.6;
  }
  @media (max-width: 860px) {
    .hero-media {
      grid-template-columns: 1fr;
    }
  }
</style>
