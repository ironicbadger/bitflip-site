---
import { parseChapterTime } from "../lib/chapters";

const { episode } = Astro.props;
const { title, episodeNumber, duration, audioUrl, chapters } = episode.data;
const chapterItems = (chapters ?? []).map((chapter) => ({
  ...chapter,
  seconds: parseChapterTime(chapter.time),
}));
---

<div
  class="episode-player"
  data-src={audioUrl}
  data-title={title}
  data-episode={episodeNumber}
>
  <div class="player-header">
    <div>
      <div class="section-title">Listen</div>
      <div class="player-title">{title}</div>
      <div class="player-meta">Duration {duration}</div>
    </div>
    <button class="button" type="button" data-play>
      Play
    </button>
  </div>
  {chapterItems.length > 0 && (
    <div class="player-chapters">
      {chapterItems.map((chapter) => (
        <button class="chapter" type="button" data-seek={chapter.seconds}>
          <span class="chapter-time">{chapter.time}</span>
          <span>{chapter.title}</span>
        </button>
      ))}
    </div>
  )}
</div>

<script type="module">
  const root = document.currentScript.closest(".episode-player");
  const playButton = root?.querySelector("[data-play]");
  const chapters = root?.querySelectorAll("[data-seek]") ?? [];

  playButton?.addEventListener("click", () => {
    const detail = {
      src: root.dataset.src,
      title: root.dataset.title,
      episodeNumber: Number(root.dataset.episode),
    };
    window.dispatchEvent(new CustomEvent("bitflip:play", { detail }));
  });

  chapters.forEach((button) => {
    button.addEventListener("click", () => {
      const seconds = Number(button.dataset.seek);
      window.dispatchEvent(
        new CustomEvent("bitflip:seek", { detail: { seconds } })
      );
    });
  });
</script>

<style>
  .episode-player {
    background: rgba(12, 14, 16, 0.6);
    border: 1px solid rgba(243, 139, 18, 0.2);
    border-radius: var(--radius-md);
    padding: 20px;
    display: grid;
    gap: 16px;
  }
  .player-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
  }
  .player-title {
    font-family: var(--font-display);
    font-size: 1.3rem;
  }
  .player-meta {
    color: var(--steel-500);
    font-size: 0.9rem;
  }
  .player-chapters {
    display: grid;
    gap: 8px;
  }
  .chapter {
    display: flex;
    gap: 12px;
    align-items: center;
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: var(--radius-sm);
    color: var(--steel-300);
    padding: 8px 12px;
    text-align: left;
    cursor: pointer;
  }
  .chapter:hover {
    border-color: rgba(243, 139, 18, 0.5);
    color: var(--steel-100);
  }
  .chapter-time {
    font-size: 0.75rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--safety-500);
  }
  @media (max-width: 720px) {
    .player-header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
